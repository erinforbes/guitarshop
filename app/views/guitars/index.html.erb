<p id="notice"><%= notice %></p>

<h1>Listing Guitars (<%= @guitars_count %>)</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Name</th>
      <th>Description</th>
      <th>String number</th>
      <th>Left handed</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guitars.each do |guitar| %>
      <tr>
        <td><%= guitar.title %></td>
        <td><%= guitar.type %></td>
        <td><%= guitar.name %></td>
        <td><%= guitar.description %></td>
        <td><%= guitar.string_number %></td>
        <td><%= guitar.left_handed %></td>
        <td><%= guitar.picture %></td>
        <td><%= link_to 'Show', guitar %></td>
        <td><%= link_to 'Edit', edit_guitar_path(guitar) %></td>
        <td><%= link_to 'Destroy', guitar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

